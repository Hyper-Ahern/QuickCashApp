<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_panel"
    tools:context=".DashboardActivity">


    <Button
        android:id="@+id/backBtnDB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="31dp"
        android:backgroundTint="#C1B7B7"
        android:fontFamily="serif"
        android:text="LOGOUT"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allJobsBtnDB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="serif"
        android:text="VIEW JOBS"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/postJobBtnDB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="160dp"
        android:fontFamily="serif"
        android:text="POST JOB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/payEmpBtnDB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="121dp"
        android:layout_marginBottom="160dp"
        android:fontFamily="serif"
        android:text="PAYMENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/historyBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="105dp"
        android:fontFamily="serif"
        android:text="HISTORY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="262dp"
        android:layout_height="422dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/historyBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/postJobBtnDB"
        app:layout_constraintTop_toBottomOf="@+id/backBtnDB"
        app:srcCompat="@drawable/trigger" />
</androidx.constraintlayout.widget.ConstraintLayout>